<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.account.AccountSettingActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/include_toolbar" />


        <RelativeLayout
            android:id="@+id/account_ll_user_info"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_100"
            android:layout_marginTop="@dimen/space_10"
            android:background="@color/color_white"
            android:padding="@dimen/space_15">

            <ImageView
                android:layout_width="@dimen/space_50"
                android:layout_height="@dimen/space_50"
                android:layout_centerVertical="true"
                android:src="@drawable/user_face" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/item_go" />

        </RelativeLayout>


        <TextView
            android:id="@+id/setting_tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_10"
            android:background="@color/color_white"
            android:drawableRight="@drawable/item_go"
            android:padding="@dimen/space_15"
            android:text="地址管理" />

        <include layout="@layout/view_h_line" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:drawableRight="@drawable/item_go"
            android:padding="@dimen/space_15"
            android:text="增票资质" />

        <include layout="@layout/view_h_line" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:drawableRight="@drawable/item_go"
            android:padding="@dimen/space_15"
            android:text="账号安全" />

        <include layout="@layout/view_h_line" />

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/space_50"
        android:background="@color/color_red"
        android:gravity="center"
        android:padding="@dimen/space_15"
        android:text="退出登录"
        android:textColor="@color/color_white" />

</RelativeLayout>