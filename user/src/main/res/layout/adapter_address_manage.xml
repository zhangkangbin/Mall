<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ui.account.AddressManageActivity"
    tools:ignore="MissingDefaultResource">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_1"
        android:background="@color/color_white"
        android:padding="@dimen/space_10">

        <TextView
            android:id="@+id/addressTvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space_10"
            android:text="张三" />

        <TextView
            android:id="@+id/addressTvPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_10"
            android:layout_toRightOf="@+id/addressTvName"
            android:text="1345678902" />

        <TextView
            android:id="@+id/addressTvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addressTvName"
            android:layout_marginTop="@dimen/space_10"
            android:text="广东省深圳市梧桐树下" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addressTvAddress"
            android:layout_marginTop="@dimen/space_10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/addressTvDefault"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/color_ffff4b5a"
                android:padding="@dimen/space_10"
                android:text="默认地址" />

            <TextView
                android:id="@+id/addressTvEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_10"
                android:text="编辑" />




        </LinearLayout>

    </RelativeLayout>


</LinearLayout>