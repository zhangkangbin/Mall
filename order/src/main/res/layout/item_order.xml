<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical"
    tools:context=".ui.OrderFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/space_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单号：1234" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="等待发货" />

    </RelativeLayout>

    <View style="@style/h_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_10">

        <ImageView
            android:id="@+id/orderIv"
            android:layout_width="@dimen/space_50"
            android:layout_height="@dimen/space_50"
            android:src="@drawable/banner_dian_focus" />

        <TextView
            android:id="@+id/orderTvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_6"
            android:layout_toRightOf="@id/orderIv"
            android:text="商品名称" />

        <TextView
            android:id="@+id/orderTvType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/orderTvTitle"
            android:layout_marginLeft="@dimen/space_6"
            android:layout_toRightOf="@id/orderIv"
            android:text="商品属性"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/orderTvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/orderTvType"
            android:layout_marginLeft="@dimen/space_6"
            android:layout_marginTop="@dimen/space_10"
            android:layout_toRightOf="@id/orderIv"
            android:text="￥99.99"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/orderTvNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/orderTvType"
            android:layout_marginLeft="@dimen/space_6"
            android:layout_marginTop="@dimen/space_10"
            android:layout_toRightOf="@id/orderTvPrice"
            android:text="x1"
            android:textSize="@dimen/text_size_12" />
    </RelativeLayout>

    <View style="@style/h_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/space_10">

        <TextView
            android:id="@+id/orderTvPayPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="应付金额：￥8.88" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/orderBtnCancel"
                android:layout_width="90dp"
                android:layout_height="@dimen/space_40"
                android:text="取消订单"
                android:textSize="@dimen/text_size_12" />

            <Button
                android:id="@+id/orderBtnPay"
                android:layout_width="90dp"
                android:layout_height="@dimen/space_40"
                android:text="立即付款" />


        </LinearLayout>


    </RelativeLayout>


</LinearLayout>