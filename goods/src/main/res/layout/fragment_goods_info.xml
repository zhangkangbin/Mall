<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.GoodsInfoFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <com.z.baselibrary.ui.banner.ImageCycleView
            android:id="@+id/goodsInfoViewPager"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/refresh_orange" />

        <TextView
            android:id="@+id/goodsTvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_6"
            android:text="【买两套减5元】婴儿装秋冬季纯棉高腰内衣护肚套装"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/goodsTvTitleSub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_6"
            android:text="【买两套减5元】婴儿装秋冬季纯棉高腰内衣护肚套装"
            android:textSize="@dimen/text_size_12" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_6"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/goodsTvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥29.99"
                android:textColor="@color/color_ffff4b5a"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/goodsTvPrices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_6"
                android:text="￥99.99"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>


    </LinearLayout>

</ScrollView>