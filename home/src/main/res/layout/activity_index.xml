<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.IndexActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/base_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/space_8">

        <RadioButton
            android:id="@+id/main_rb_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/main_rb_home_ic"
            android:gravity="center"
            android:text="首页"
            android:textColor="@drawable/main_rb_text_select"
            android:textSize="@dimen/text_size_12" />


        <RadioButton
            android:id="@+id/main_rb_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/main_rb_type_ic"
            android:gravity="center"
            android:text="分类"
            android:textColor="@drawable/main_rb_text_select"
            android:textSize="@dimen/text_size_12" />

        <RadioButton
            android:id="@+id/main_rb_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/main_rb_car_ic"
            android:gravity="center"
            android:text="购物车"
            android:textColor="@drawable/main_rb_text_select"
            android:textSize="@dimen/text_size_12" />

        <RadioButton
            android:id="@+id/main_rb_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/main_rb_my_select"
            android:gravity="center"
            android:text="我的"
            android:textColor="@drawable/main_rb_text_select"
            android:textSize="@dimen/text_size_12" />


    </RadioGroup>


</LinearLayout>